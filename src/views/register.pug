extends layout

block content
  br
  div.col-md-6.col-md-offset-3
    h1 #{title}
    p#message.alert.alert-danger(style='display:none')
    p#message-success.alert.alert-success(style='display:none')
    form.register-form(name='register-form')
      div.form-group
        label(for='email') Email
        input.form-control(type='text' name='email' maxlength='64')
      div.form-group
        label(for='password') Password
        input.form-control(type='password' name='password' maxlength='32')
      div.form-group
        button#signup.btn.btn-primary(type='submit') Sign Up
        a.btn.btn-link(href='/login') Sign in